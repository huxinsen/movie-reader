.post-item {
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.post-item-author {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}

.post-item-author__avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.post-item-author__date {
  font-size: 14px;
}

.post-item-title {
  padding: 10rpx 20rpx;
  font-weight: bold;
  color: #333;
}

.post-item-image {
  width: 100%;
  height: 400rpx;
}

.post-item-content {
  padding: 10rpx 20rpx;
  color: #666;
}

.post-item-info {
  display: flex;
  padding: 10rpx 20rpx;
}

.post-item-info-item {
  display: flex;
  align-items: center;
  margin-right: 25rpx;
}

.post-item-info-item__icon {
  width: 14px;
  height: 14px;
  margin-right: 10rpx;
}

.post-item-info-item__text {
  font-size: 14px;
  color: #333;
}
