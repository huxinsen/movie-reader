.welcome {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #b3d4db;
}

.welcome__avatar {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.welcome__greeting {
  margin-bottom: 300rpx;
  font-size: 16px;
}

.welcome__btn {
  padding: 25rpx;
  font-size: 14px;
  border: 1px solid #405f80;
  border-radius: 5px;
  color: #405f80;
}
